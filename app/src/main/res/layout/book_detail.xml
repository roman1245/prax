<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".EditBookActivity">

    <include
        android:id="@+id/appbar"
        layout="@layout/parallax_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Main content -->
        <android.support.v7.widget.GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/edit_book_info"
                android:src="@drawable/ic_book"
                android:tint="@color/md_grey_700"
                app:layout_column="0"
                app:layout_row="0" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/edit_book_info"
                android:src="@drawable/ic_author"
                android:tint="@color/md_grey_700"
                app:layout_column="0"
                app:layout_row="1" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/edit_book_info"
                android:src="@drawable/ic_tie"
                android:tint="@color/md_grey_700"
                app:layout_column="0"
                app:layout_row="2" />

            <ImageView
                android:id="@+id/book_detail_isbn_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/edit_book_info"
                android:src="@drawable/ic_barcode"
                android:tint="@color/md_grey_700"
                app:layout_column="0"
                app:layout_row="3" />

            <ImageView
                android:id="@+id/book_detail_description_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/edit_book_info"
                android:src="@drawable/ic_pencil"
                android:tint="@color/md_grey_700"
                app:layout_column="0"
                app:layout_row="4" />

            <ImageView
                android:id="@+id/book_detail_borrow_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/edit_book_info"
                android:src="@drawable/ic_share"
                android:tint="@color/md_grey_700"
                android:visibility="gone"
                app:layout_column="0"
                app:layout_gravity="end|center_vertical"
                app:layout_row="5"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/book_detail_full_book_name"
                android:layout_width="0dp"
                android:layout_marginEnd="64dp"
                android:layout_marginRight="64dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:textIsSelectable="true"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="0"
                tools:text="Do vysok zdvihajte krov tesari a Seymour: Uvod pokus cislo 1" />

            <TextView
                android:id="@+id/book_detail_author"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:singleLine="true"
                android:textIsSelectable="true"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="1"
                tools:text="John Ronald Reuel Tolkien" />

            <TextView
                android:id="@+id/book_detail_publisher"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:singleLine="true"
                android:textIsSelectable="true"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="2"
                tools:text="Slovart" />

            <TextView
                android:id="@+id/book_detail_isbn"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:textIsSelectable="true"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="3"
                tools:text="0802356555" />

            <TextView
                android:id="@+id/book_detail_description"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:textIsSelectable="true"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="4"
                tools:text="This book was completely awesome! It was about some small Hobbit." />

            <Button
                android:id="@+id/book_detail_borrow"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Theme"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:visibility="gone"
                app:layout_column="1"
                app:layout_gravity="start"
                app:layout_row="5"
                tools:text="Agatha Smith"
                tools:visibility="visible" />
        </android.support.v7.widget.GridLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_share_white"
        app:elevation="6dp"
        app:fabSize="normal"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end"
        app:pressedTranslationZ="12dp" />
</android.support.design.widget.CoordinatorLayout>