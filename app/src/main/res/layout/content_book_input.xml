<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/book_input">

    <RelativeLayout
        android:id="@+id/book_input_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/book_input_image"
            android:layout_width="72dp"
            android:layout_height="108dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/accent"
            android:contentDescription="@string/book_image" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/book_input_author"
            style="@style/Widget.Design.TextInputLayout.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_toLeftOf="@id/book_input_image"
            android:layout_toStartOf="@id/book_input_image">

            <EditText
                style="?android:attr/textAppearanceMediumInverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/book_author"
                android:inputType="text"
                android:singleLine="true"
                tools:text="John Ronald Reuel Tolkien" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/book_input_title"
            style="@style/Widget.Design.TextInputLayout.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_input_author"
            android:layout_toLeftOf="@id/book_input_image"
            android:layout_toStartOf="@id/book_input_image">

            <EditText
                style="?android:attr/textAppearanceMediumInverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/book_title"
                android:inputType="text"
                android:singleLine="true"
                tools:text="The Lord of the rings" />
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/book_input_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:text="@string/action_save" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/book_input_save"
        android:layout_below="@id/book_input_heading">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/book_input_publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/book_publisher"
                    tools:text="The Publisher" />
            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/book_input_barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/book_input_publisher"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/book_barcode"
                android:padding="16dp"
                android:src="@drawable/ic_barcode" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/book_input_isbn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_input_publisher"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/book_input_barcode"
                android:layout_toStartOf="@id/book_input_barcode">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/book_isbn"
                    tools:text="0802356555" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>