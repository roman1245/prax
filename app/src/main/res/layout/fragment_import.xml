<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/import_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/import_description" />

            <Button
                android:id="@+id/import_how_to"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/import_text"
                android:text="@string/import_how_to" />

            <Button
                android:id="@+id/import_select_file"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/import_how_to"
                android:layout_marginTop="24dp"
                android:text="@string/import_select_file" />

            <TextView
                android:id="@+id/import_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/import_select_file"
                android:layout_alignTop="@id/import_select_file"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/import_select_file"
                android:layout_toRightOf="@id/import_select_file"
                android:gravity="center_vertical"
                tools:text="sdcard/sample_database.csv" />

            <Switch
                android:id="@+id/import_first_row"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/import_select_file"
                android:text="@string/import_first_row" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/import_columns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/import_import"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:text="@string/import_import" />
</LinearLayout>