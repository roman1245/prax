<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Theme extension to support colors for navigation bar etc. -->
    <style name="AppTheme.Base" parent="@style/AppTheme">
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:buttonStyle">@style/Base.Widget.AppCompat.Button.Theme</item>
        <item name="android:borderlessButtonStyle">@style/Base.Widget.AppCompat.Button.Borderless.Theme</item>
    </style>

    <!-- More specified for this APIs -->
    <style name="AppTheme.Base.NoStatusBar" parent="@style/AppTheme.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Design.TextInputLayout.Inverse">
        <item name="android:textColorHint">@color/md_grey_300</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Theme" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/md_grey_200</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Borderless.Theme" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/primary_dark</item>
    </style>
</resources>