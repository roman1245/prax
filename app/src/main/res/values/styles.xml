<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="dialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <!-- More specified for this APIs -->
    <style name="AppTheme.Base" parent="@style/AppTheme" />

    <style name="AppTheme.Base.NoStatusBar" parent="@style/AppTheme.Base" />

    <!-- Supported since API 21-->
    <style name="AppTheme.NoStatusBar" parent="@style/AppTheme.Base" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>
