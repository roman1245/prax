<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="dialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Variant" parent="AppTheme">
        <item name="colorPrimary">@color/primary_variant</item>
        <item name="colorPrimaryDark">@color/primary_dark_variant</item>
        <item name="colorAccent">@color/accent_variant</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- More specified for this APIs -->
    <style name="AppTheme.Base" parent="@style/AppTheme" />

    <style name="AppTheme.Variant.Base" parent="@style/AppTheme" />

    <style name="AppTheme.Base.NoStatusBar" parent="@style/AppTheme.Base" />

    <!-- Supported since API 21-->
    <style name="AppTheme.NoStatusBar" parent="@style/AppTheme.Base" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TextAppearance.AppCompat.Invisible" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#0000</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.Title" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.Title.Inverse" parent="TextAppearance.AppCompat.Small.Inverse">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/title_inverse</item>
    </style>
</resources>
